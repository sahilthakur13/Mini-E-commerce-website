<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>products</title>
    <link rel="stylesheet" href="./Assests/stylesheet/allproduct.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <section>
        <div class="container">
            <h1>All Products</h1>
            <div class="row">
                <div class="d-flex justify-content-end grid gap-0 column-gap-3">
                    <button class="btn btn-secondary"><a class="nav-link text-white" href="/home">
                            Home</a></button>
                    <button class="btn btn-success "><a class="nav-link text-white" href="/create">Create Product</a>
                    </button>
                </div>
            </div>
            <form action="/allproducts" method="get">
                <select name="category" onchange="this.form.submit()">
                    <option value="">Categories</option>
                    <option value="">all Products</option>
                    <option value="Electronics">Electronics</option>
                    <option value="Shoes">Shoes</option>
                </select>
            </form>

            <div class="row">
                <% if (allProducts.length> 0) { %>
                    <%allProducts.forEach(product=> { %>
                        <div class="col-sm-3">
                            <div class="card" id="card">
                                <div class="overflow-hidden">
                                    <img  src="<%=product.imageurl %>" id="img" class="card-img-top img-fluid"
                                        alt="Product Image">
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= product.name %>
                                    </h5>
                                    <h5 class="card-text text-success">$<%=product.price %>
                                    </h5>
                                    <h6 class="description">
                                        <%=product.desc %>
                                    </h6>
                                    <h6 class="catagory">Catagory:- <%= product.category %>
                                    </h6>
                                    <button class="btn btn-info"> <a class="nav-link text-white"
                                            href="/allProducts/edit/<%= product._id %>">Edit</a></button>
                                    <button class="btn btn-danger"> <a class="nav-link text-white"
                                            href="/allProducts/delete/<%= product._id %>">Delete</a></button>
                                    <a href="/allProducts/addToCart"<%= product._id %> class="btn btn-primary">Add to Cart</a>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                            <% } else { %>
                                <h1>No products found</h1>
                                <% } %>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>